@using EmployeeManagement.Utils.Constant
@model EmployeeManagement.Models.Entity.Employee

<form method="post">
    <div class="container mb-5">
        <div class="row d-flex justify-content-center">
            <input asp-for="Id" hidden />
            <div class="text-center mx-3">
                <a asp-action="Index" asp-controller="Employee" class="btn btn-dark my-3" style="min-width:200px" asp-route-page="1" asp-route-size="@Constant.SizeOfEmployeePage">Go back</a>
            </div>
            <div class="col-md-8 border border-primary px-5 py-4 m-4 rounded-2">
                <h3 class="text-center text-uppercase mb-4 mt-3">Delete employee</h3>
                @if (Model == null)
                {
                    <div class="form-group px-4 mb-3">
                        <span class="text-danger">Please reload web</span>
                    </div>
                }
                @if (Model != null)
                {
                    <div class="form-group px-4">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" style="padding:0.3rem 0; color : gray" disabled placeholder="Enter name">
                    </div>
                    <div class="form-group px-4 mt-4">
                        <label asp-for="Dob"></label>
                        <input asp-for="Dob" type="date" class="form-control" disabled style="padding:0.3rem 0 ; color : gray" />
                    </div>
                    <div class="form-group px-4 mt-4">
                        <label asp-for="EthnicGroupId"></label>
                        @*<input asp-for="EthnicGroup" class="form-control" style="padding:0.3rem 0" placeholder="Enter ethnic group">*@
                        <select asp-for="EthnicGroupId" disabled class="form-control mb-3" style="color : gray">
                            <option value=@Model?.EthnicGroupId>@Model?.EthnicGroup?.Name</option>
                        </select>
                    </div>
                    <div class="form-group px-4 mt-4">
                        <label asp-for="OccupationId"></label>
                        <select asp-for="OccupationId" disabled class="form-control mb-3" style="color : gray">
                            <option value=@Model?.OccupationId>@Model?.Occupation?.Name</option>
                        </select>
                    </div>

                    <div class="form-group px-4 mt-4">
                        <label>Province</label>
                        <select id="province" disabled class="form-control mb-3">
                            <option value=@Model?.Commune?.District?.ProvinceId>@Model?.Commune?.District?.Province?.Name</option>
                        </select>
                    </div>
                    <div class="form-group px-4 mt-4">
                        <label>District</label>
                        <select id="district" disabled class="form-control mb-3">
                            <option value=@Model?.Commune?.DistrictId>@Model?.Commune?.District?.Name</option>
                        </select>
                    </div>
                    <div class="form-group px-4 mt-4">
                        <label asp-for="CommuneId"></label>
                        <select id="commune" disabled asp-for="CommuneId" class="form-control mb-3">
                            <option value=@Model?.CommuneId>@Model?.Commune?.Name</option>
                        </select>
                        <span asp-validation-for="CommuneId"
                              class="text-danger"></span>
                    </div>

                    <div class="form-group px-4 mt-4">
                        <label asp-for="CitizenIdentityCard"></label>
                        <input asp-for="CitizenIdentityCard" class="form-control" disabled style="padding:0.3rem 0 ; color : gray">
                        <span asp-validation-for="CitizenIdentityCard" class="text-danger"></span>
                    </div>
                    <div class="form-group px-4 mt-4">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" disabled style="padding:0.3rem 0 ; color : gray">
                    </div>
                    <div class="mt-5 text-center mb-3">
                        <button type="submit" class="btn btn-danger" style="min-width:200px">Delete</button>
                    </div>
                }

            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}




